<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout_wht_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemWhtList"
    android:fitsSystemWindows="false"
    android:background="#FFFF"
    xmlns:tool="http://schemas.android.com/tools"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_wht_header"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout_wht_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <ImageView
                android:id="@+id/heroImageView_wht_header"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:src="@drawable/warehouse_icn"
                android:scaleType="centerCrop"
                android:layout_below="@id/toolbar"
                app:layout_collapseMode="parallax"
                />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_wht_header"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/LL_wht_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID WTR"/>

            <TextView
                android:id="@+id/id_WTR"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="112" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="NO WTR"/>
            <TextView
                android:id="@+id/no_WTR"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="WTR12345"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dest WH "/>
            <TextView
                android:id="@+id/dest_wh"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gudang A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dest WH "/>
            <TextView
                android:id="@+id/sc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gudang B"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Keterangan Retur"/>
            <Spinner
                android:id="@+id/ket_retur"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Kontainer"/>
            <EditText
                android:id="@+id/kontainer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Kontainer A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Driver"/>
            <EditText
                android:id="@+id/driver"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bejo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Plat Nomor"/>
            <EditText
                android:id="@+id/nopol"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="B 49 US"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="No Seal"/>
            <EditText
                android:id="@+id/noseal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="12345"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFF"
            android:clickable="true"
            android:text="Konfirm"
            android:id="@+id/btn_konfirm"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
